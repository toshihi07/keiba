.container.mt-5
  %h1 新しい投稿
  = form_with(model: @article, url:"/articles/#{current_user.id}" ,local: true) do |f|
    = f.label :title, "タイトル"
    %br/
    = f.text_field :title
    %p
    = f.label :body, "内容"
    %br/
    = f.text_area :body, cols: 60, rows: 8
    .file-field-box
      = f.fields_for :item_images do |fi|
        .file-content
          .setimage
          = fi.file_field :image, class: "file-upload"    
    %p
    = f.submit
