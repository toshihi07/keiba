= render "./layouts/header"
.betting-container.text-center.registration-form.mt-5
  .betting-top.pt-3
    %h1.border-bottom.pb-3 馬券情報入力
  .betting-main
    = form_with model: @bettings,scope: "bettings", url: bettings_path,local: true do |f|
      .race_date.pt-3
        = f.date_select(:when,use_month_numbers: true,start_year: 2015,end_year: Time.now.year,date_separator: '/')
      .race_course.pt-3
        = f.select :race_course_id, RaceCourse.all.collect{|p|[p.name,p.id]}, {prompt: "競馬場"}, class:"select-box"
      .race_number.pt-3
        = f.select :race_number_id,RaceNumber.all.collect{|p|[p.number,p.id]}, {prompt: "レース番号"}, class:"select-box"
      .rece_name.pt-3
        = f.text_field :race_name,class:"text-box pl-2 ",placeholder: 'レース名(任意)'
      .category.pt-3
        = f.select :category,@categories.collect{|p|[p.name,p.id]}, {prompt: "式別"}, class:"select-box"
      .category_children
      .horse_number_1.pt-3
      .horse_number_2.pt-3
      .invetment.pt-3
        = f.text_field :investment ,class: 'text-box pl-2',placeholder: '金額'
      .combination.pt-3
      .inner-box__center.py-3
        = f.submit "クリア", class: "betting_button mx-2"
        = f.submit "登録", class: "betting_button mx-2"