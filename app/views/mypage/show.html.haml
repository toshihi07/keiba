= render "./layouts/header"
.container
  .mypage.row
    .card.col-8.mr-3.mt-5
      .card-header.d-flex.justify-content-between
        %h 11月25日(月) ようこそ、まこまこさん
        .mypage-button
          = link_to "マイページ編集",{type: "button", href: "/mypage/#{@user.id}/edit"}
      .card-body
        %h5.card-title 総収支
        %p.card-text With supporting text below as a natural lead-in to additional content.
    .card.col-3.mt-5{style: "max-width: 18rem;"}
      .card-header お気に入り馬
      .card-body.text-dark
        %h5.card-title 登録されていません
        %p.card-text 
    .card.col-8.mr-3.mt-5.p-0
      .card-header.d-flex.justify-content-between
        %p 最近の購入
        %p 一覧
      .card-body
        .betting-card.border
          %h5.card-title 2019年12月25日 11R 馬連
          %p.card-text 投資1000円、回収0円
        .betting-card.border.mt-3
          %h5.card-title 2019年12月25日 11R 馬連
          %p.card-text 投資1000円、回収0円
    .card.col-3.mt-5{style: "max-width: 18rem;"}
      .card-header 収支分析
      .card-body.text-dark
        %h5.card-title 回収率
        %h5.card-title 年別収支
        %h5.card-title 月別収支
        %h5.card-title 競馬場別収支
        %h5.card-title 馬券種別収支

  - if current_user.try(:admin?)
    .page-header
      %h1 管理者マイページ
      %p.admin_btn.col-xs-offset-1.col-xs-10.col-xs-offset-1= link_to "管理画面", "/admin"
